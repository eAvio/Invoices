{
    "name": "eavio/invoices",
    "description": "A Laravel PDF Invoices Generator",
    "license": "MIT",
    "authors": [
        {
            "name": "eAvio",
            "email": "dev@eavio.aero"
        }
    ],
    "require": {
        "illuminate/support": "^5.0|^6.0|^7.0|^8.0",
        "illuminate/view": "^5.0|^6.0|^7.0|^8.0",
        "nesbot/carbon": ">1.22",
        "dompdf/dompdf": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Eavio\\Invoices\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Eavio\\Invoices\\InvoicesServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
